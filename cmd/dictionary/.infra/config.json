{
  "policy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "dynamodb:GetItem",
          "dynamodb:PutItem",
          "dynamodb:UpdateItem",
          "dynamodb:DeleteItem",
          "dynamodb:Scan",
          "dynamodb:Query",
          "dynamodb:ListTables"
        ],
        "Resource": "arn:aws:dynamodb:*:*:table/lingocards-dictionary"
      },
      {
        "Effect": "Allow",
        "Action": [
          "s3:DeleteObject"
        ],
        "Resource": "arn:aws:s3:::lingocards.dictionary/*"
      },
      {
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject"
        ],
        "Resource": "arn:aws:s3:::lingocards.processing/*"
      }
    ]
  },
  "memory_size": 128,
  "timeout": 2,
  "envs": {
    "SERVICE_DICTIONARY_BUCKET": "${service_dictionary_bucket}",
    "SERVICE_PROCESSING_BUCKET": "${service_processing_bucket}"
  }
}