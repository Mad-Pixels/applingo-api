{
    "policy": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "dynamodb:GetItem",
            "dynamodb:PutItem",
            "dynamodb:UpdateItem",
            "dynamodb:DeleteItem",
            "dynamodb:Scan",
            "dynamodb:Query",
            "dynamodb:ListTables"
          ],
          "Resource": [
            "${dictionary_table_arn}",
            "${dictionary_table_arn}/index/*"
          ]
        },
        {
          "Effect": "Allow",
          "Action": [
            "s3:DeleteObject"
          ],
          "Resource": [
            "${dictionary_bucket_arn}/*",
            "${dictionary_bucket_arn}"
          ]
        },
        {
          "Effect": "Allow",
          "Action": [
            "s3:GetObject",
            "s3:PutObject"
          ],
          "Resource": [
            "${processing_bucket_arn}/*",
            "${processing_bucket_arn}"
          ]
        }
      ]
    },
    "memory_size": 128,
    "timeout": 2,
    "envs": {
      "SERVICE_DICTIONARY_BUCKET": "${dictionary_bucket_name}",
      "SERVICE_PROCESSING_BUCKET": "${processing_bucket_name}"
    }
  }